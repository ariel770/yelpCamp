<%- include ("../partials/header")%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
                 <div style="width:30%; margin: 20px auto;">
                   <form action="/campGround/<%=campground._id%>?_method=PUT" method="POST">     
                    <div class="form-group">
                       <input type="text" class="form-control" name="name" value="<%= campground.name %>">
                   </div>
                    <div class="form-group">
                       <input type="text" class="form-control" name="price" value="<%= campground.price %>">
                   </div>
                    <div class="form-group">
                       <input type="text" class="form-control" name="autside" value="<%= campground.image.autside %>">
                   </div>
                    <div class="form-group">
                       <input type="text" class="form-control" name="home" value="<%= campground.image.home %>">
                   </div>
                   <div class="form-group">
                       <input type="text" class="form-control"  name="description" value="<%= campground.description %>">
                   </div>
                   <div class="form-group">
                       <button class="btn btn-lg btn-primary btn-block ">Update</button>
                   </div>
   
                   </form>
                   <a href="/campGround">Go Back</a>
                   </div> 
   </div>
</div>
<%- include ("../partials/footer")%>
