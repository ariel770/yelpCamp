<%- include("../partials/header") %>
<header class="jumbotron">
    <div class="container">
      <div class="row ">
        <div class="hidden-xs hidden-sm  col-md-5 col-lg-3 col-xl-3 searchoption">
          <div class="row separate d-none ">

            <div class="form-group">
              <button id="btn1" class="btn btn-lg btn-success btn-block" type="button" data-toggle="collapse"
                  data-target="#multiCollapseExample1" aria-expanded="false"
                  aria-controls="multiCollapseExample1">חיפוש מתקדם </button>
          </div>
          
              <div class="collapse multi-collapse" id="multiCollapseExample1">
            <form class="form-inline" action="/campGround/filterandsort" id="filter" method="POST">
              <input type="text" list="filter" multiple class="form-control" name="filter" placeholder="חפש עיר" />
              <datalist id="filter">
                <option value="jerusalem">ירושלים</option>
