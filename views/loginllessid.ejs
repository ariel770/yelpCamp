<%- include("./partials/header") %>
<div class="container">
    <div style="width:30%; margin: 20px auto;">

        <h2 style="text-align: center;"> <strong> <em>כניסה</em> </strong> </h2>
        <form action="/login"autocomplete="off" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" autocomplete="off" name="username" placeholder="שם משתמש">
            </div>
            <div class="form-group">
                <input type="password" class="form-control"autocomplete="off" name="password" placeholder="סיסמא">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-danger btn-block ">כניסה</button>
            </div>
        </form>

        <h2 style="text-align: center;"> <strong> <em>הרשמה</em> </strong> </h2>
        <form action="/register" autocomplete="off" method="POST">
            <div class="form-group">
                <input type="text" class="form-control"  autocomplete="off"name="username" placeholder="שם משתמש">
            </div>
            <div class="form-group">
                <input type="password" class="form-control"autocomplete="off" name="password" placeholder="סיסמא">
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="number" class="form-control"autocomplete="off" name="contact[phone]" placeholder="טלפון">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <input type="email" class="form-control"autocomplete="off" name="contact[email]" placeholder="מייל">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-danger btn-block ">הרשמה</button>
            </div>
        </form>
    </div>
</div>
<%- include("./partials/footer") %>