<%- include("../partials/header") %>

<div class="container">
   <div class="row">

      <div class="col-md-3">
         <div class="row">

            <div class="list-group">
               <a class="list-group-item btn disabled"
                  href="/campGround/<%= campground._id%>/orders"><%= campground.name%> </a>
               <div class="well">
                  <div class="text-right">
                     <p> <%= campground.description %>: תיאור</p>
                  </div>
                  <div class="text-right">
                     <p><a href="https://www.d.co.il"><%= campground.author.contact.phone %></a> :טלפון </p>
                     <p><a href="http://www.gmail.com"><%= campground.author.contact.email %></a> :פרטי קשר</p>
                  </div>
                  <div class="text-right">
                     <p><%= campground.location %>: מיקום </p>
                  </div>
                  <div class="text-right">
                     <p><%= campground.kashrut %>: כשרות </p>
                  </div>
               </div>
            </div>
         </div>
         <div class="row">
            <div class="col-md-8"  style="padding-left: 0;">
               <div class="list-group">
                  <a class="list-group-item btn disabled">דברים כלולים</a>

                  <div class="well">
                     <div class="text-right" >
                     
                        <%if(campground.includeThings.crib){%>
                        <p><strong> <i class="fa fa-child" aria-hidden="true"></i>לול/מיטת תינוק</strong></p>
                        <%}%>
                     <%if(campground.includeThings.linen){%>
                        <p><strong><i class="fa fa-bed" aria-hidden="true"></i> כלי מיטה </strong></p>
                        <%}%>
                     <%if(campground.includeThings.kettle){%>
                        <p><strong><i class="fa fa-coffee" aria-hidden="true"></i> מיחם לשבת </strong></p>
                        <%}%>
                     <%if(campground.includeThings.airconditioner){%>
                        <p><strong><i class="fa fa-snowflake-o"></i> מיזוג אוויר </strong></p>
                        <%}%>
                     <%if(campground.includeThings.platter){%>
                        <p><strong><i class="fa fa-fire" aria-hidden="true"></i>פלטה </strong></p>
                        <%}%>
                     <%if(campground.includeThings.parking){%>
                        <p><strong> <i class="fa fa-car" aria-hidden="true"></i>חניה באיזור </strong></p>
                        <%}%>
                  </div>       
                </div>
             </div>
          </div>
          
          </div> 
          
         
         </div>
         <div class="col-md-9">
            <div class="thumbnail">
               <div class="show-nice">
              <div  class="row">
                 <div class="col-md-6">
                    <img class="img-responsive img-thumbnail" src="<%= campground.image.home%>">
                     </div>
                     <div class="col-md-6">
                        <img class="img-responsive img-thumbnail" src="<%= campground.image.autside%>">
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-md-6">
                        <img class="img-responsive img-thumbnail" src="<%= campground.image.home1%>">
                     </div>
                     <div class="col-md-6">
                        <img class="img-responsive img-thumbnail" src="<%= campground.image.autside1%>">
                     </div>
                  </div>
               </div>

               <tr>
                  <div class="caption-full">
                     <h4 class="pull-left"><%= campground.price%> <i class="fa fa-ils" aria-hidden="true"></i>/ללילה </h4>

                     <div class="caption">
                        <div id="location_in_thumbnail">
                           <h4>שם המקום : <a href="/campGround/<%= campground._id%>/orders"><%= campground.name %></a>
                           </h4>
                           <p><em><%= campground.author.username%></em> :נוצר על ידי</p>
                        </div>

                        <%if(currentUser && campground.author.id.equals(currentUser.id)){%>

                        <button><a class="btn btn-warning "
                              href="/campGround/<%= campground._id%>/edit">ערוך</a></button>
                        <form class="delete-form" action="/campGround/<%= campground._id%>?_method=DELETE"
                           method="POST">
                           <button class="btn btn-danger">מחק</button>
                        </form>

                        <%}else if(currentUser || campground.author.id.equals(currentUser.id)){ %>
                        <button><a class="btn btn-success"
                              href="/campGround/<%=campground._id%>/order/<%= currentUser._id%>/new">הזמנה
                              חדשה</a></button>

                        <%}%> 
                
            <div class="well">
              <div class="text-right">
               <!-- <a class="btn btn-success" href="/campGround/<%= campground._id %>">View Orders</a> -->
                        <a class="btn btn-success" href="/campGround/<%= campground._id %>/comment/new">הוסף תגובה</a>
                     </div>
                     <% campground.comments.forEach(function(comment){ %>
                     <div class="row">
                        <div class="col-md-12">
                           <strong><%= comment.author.username %></strong>

                           <p><%= comment.text %></p>
                           <% if(currentUser && comment.author.id.equals(currentUser._id)){%>
                           <a href="/campGround/<%= campground._id %>/comment/<%= comment._id%>/edit"
                              class="btn btn-xs btn-warning">ערוך </a>
                           <form class="delete-form"
                              action="/campGround/<%= campground._id %>/comment/<%= comment._id%>?_method=delete"
                              method="post">
                              <input type="submit" class="btn btn-xs btn-danger" value="מחק">
                           </form>
                           <%}%> 
                     </div>
                  </div>
                 <% })%>

                        </div>
                     </div>





                  </div>
            </div>
         </div>
      </div>

   </div>

   <%- include("../partials/footer") %>