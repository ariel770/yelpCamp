<%- include ("../partials/header")%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment in <%= campground.name %></h1>
                 <div style="width:30%; margin: 20px auto;">
                   <form action="/campGround/<%= campground._id %>/comment" method="POST">     
                   
                   <div class="form-group">
                       <input type="text" class="form-control" name="comment[text]" placeholder="Comment">
                   </div>
                  <div class="form-group">
                       <button class="btn btn-lg btn-primary btn-block ">Comment</button>
                   </div>
   
                   </form>
                   <a href="/campGround">Go Back</a>
                   </div> 
   </div>
</div>
