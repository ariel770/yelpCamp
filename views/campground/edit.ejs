<%- include ("../partials/header")%>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">ערוך  <%= campground.name %></h1>
                 <div style="width:30%; margin: 20px auto;">
                   <form action="/campGround/<%=campground._id%>?_method=PUT" method="POST">     
                    <div class="form-group">
                   <label for="name">:שם </label>
                        <input type="text" id="name" class="form-control" name="campground[name]" value="<%= campground.name %>">
                   </div>
                    <div class="form-group">
                        <label for="price">:מחיר </label>
                       <input type="text" id="price" class="form-control" name="campground[price]" value="<%= campground.price %>">
                   </div>
                    <div class="form-group">
                        <label for="outside">:תמונה מבחוץ</label>
                       <input type="text" id="outside" class="form-control" name="campground[autside]" value="<%= campground.image.autside %>">
                   </div>
                    <div class="form-group">
                        <label for="home">:פנים הבית</label>
                       <input type="text" id="home" class="form-control" name="campground[home]" value="<%= campground.image.home %>">
                   </div>
                    <div class="form-group">
                        <label for="outside1">:תמונה מבחוץ</label>
                       <input type="text" id="outside1" class="form-control" name="campground[autside]" value="<%= campground.image.autside1 %>">
                   </div>
                    <div class="form-group">
                        <label for="home1">:פנים הבית</label>
                       <input type="text" id="home1" class="form-control" name="campground[home]" value="<%= campground.image.home1 %>">
                   </div>
                   <div class="form-group">
                         <label for="description">תיאור המקום</label>
                       <input type="text" id="description" class="form-control"  name="campground[description]" value="<%= campground.description %>">
                   </div>
                   <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                   <div class="form-group">
                       <button class="btn btn-lg btn-primary btn-block ">עדכון</button>
                   </div>
   
                   </form>
                   <a href="/campGround">Go Back</a>
                   </div> 
   </div>
</div>
<%- include ("../partials/footer")%>
